<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.hummingbird.common.core.dao.SysMenuDao">

	<select id="queryListParentId" resultType="io.hummingbird.common.core.entity.SysMenuEntity">
		select * from sys_menu where parent_id = #{parentId} order by order_num asc 
	</select>
	
	<select id="queryNotButtonList" resultType="io.hummingbird.common.core.entity.SysMenuEntity">
		select * from sys_menu where type != 2 order by order_num asc 
	</select>

	<select id="getChannelMenu" parameterType="io.hummingbird.common.core.entity.SysMenuEntity" resultType="io.hummingbird.common.core.entity.SysMenuEntity">
		select * from sys_menu
		<where>
			<if test="name != null and name != ''">
				name = #{name,jdbcType=VARCHAR}
			</if>
			<if test="parentId != null">
				and parent_id = #{parentId,jdbcType=BIGINT}
			</if>
		</where>
	</select>
	
</mapper>